---
import LayoutEn from '../../layouts/LayoutEn.astro';
import DashboardEn from '../../components/DashboardEn.tsx';
---

<LayoutEn title="DomainFlow - Domain Monitoring Platform">
  <DashboardEn client:load />
</LayoutEn>

<script>
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';
  import { ThemeToggleEn } from '../../components/ThemeToggleEn.tsx';

  // 渲染主题切换器
  const themeToggleContainer = document.getElementById('theme-toggle-en');
  if (themeToggleContainer) {
    const root = createRoot(themeToggleContainer);
    root.render(createElement(ThemeToggleEn));
  }
</script> 