# DomMate Environment Configuration
# Copy this file to .env and update the values according to your setup

# ===========================
# Server Configuration
# ===========================

# Backend server port (default: 3001)
SERVER_PORT=3001

# Frontend development server port (default: 4322)
CLIENT_PORT=4322

# Node.js environment (development/production/test)
NODE_ENV=production

# ===========================
# Database Configuration
# ===========================

# SQLite database file path (relative to project root)
DATABASE_PATH=./data/domains.db

# Enable database debugging logs (true/false)
DATABASE_DEBUG=false

# Database backup directory
DATABASE_BACKUP_DIR=./data/backups

# ===========================
# Security Configuration
# ===========================

# JWT secret key for token signing (generate a strong random string)
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Session secret key for cookie signing (generate a strong random string)
# Use: openssl rand -base64 32
SESSION_SECRET=your-super-secure-session-secret-key-here

# Session timeout in minutes (default: 60 minutes)
SESSION_TIMEOUT=60

# Maximum login attempts before requiring CAPTCHA (default: 3)
MAX_LOGIN_ATTEMPTS=3

# Login attempt window in minutes (default: 15 minutes)
LOGIN_ATTEMPT_WINDOW=15

# ===========================
# Email Configuration (SMTP)
# ===========================

# SMTP server hostname
SMTP_HOST=smtp.example.com

# SMTP server port (587 for TLS, 465 for SSL, 25 for plain)
SMTP_PORT=587

# Use TLS encryption (true/false)
SMTP_SECURE=false

# SMTP authentication username (usually your email address)
SMTP_USER=your-email@example.com

# SMTP authentication password or app password
SMTP_PASS=your-email-password

# Default sender name for notifications
SMTP_FROM_NAME=DomMate Notifications

# Default sender email address
SMTP_FROM_EMAIL=noreply@dommate.com

# ===========================
# Domain Monitoring Configuration
# ===========================

# Default domain check interval in hours (default: 24)
DEFAULT_CHECK_INTERVAL=24

# Days before expiration to show warnings (comma-separated)
EXPIRY_WARNING_DAYS=30,7,1

# Maximum number of domains per user (0 = unlimited)
MAX_DOMAINS_PER_USER=0

# Enable automatic WHOIS refresh (true/false)
AUTO_WHOIS_REFRESH=true

# WHOIS refresh interval in hours (default: 168 = 7 days)
WHOIS_REFRESH_INTERVAL=168

# ===========================
# Export and Backup Configuration
# ===========================

# Directory for exported files
EXPORT_DIR=./exports

# Maximum export file size in MB (default: 50)
MAX_EXPORT_SIZE=50

# Automatic backup schedule (cron format, empty to disable)
BACKUP_SCHEDULE=0 3 * * 1

# Number of backup files to keep (default: 7)
BACKUP_RETENTION=7

# ===========================
# Logging Configuration
# ===========================

# Log level (error/warn/info/debug)
LOG_LEVEL=info

# Log file path (empty to disable file logging)
LOG_FILE=./logs/dommate.log

# Maximum log file size in MB (default: 10)
LOG_MAX_SIZE=10

# Number of log files to keep (default: 5)
LOG_MAX_FILES=5

# ===========================
# Rate Limiting Configuration
# ===========================

# API rate limit per IP (requests per minute, default: 100)
API_RATE_LIMIT=100

# Login rate limit per IP (attempts per minute, default: 5)
LOGIN_RATE_LIMIT=5

# Export rate limit per user (exports per hour, default: 10)
EXPORT_RATE_LIMIT=10

# ===========================
# Third-party API Configuration
# ===========================

# WHOIS API provider (optional, for enhanced WHOIS data)
# WHOIS_API_KEY=your-whois-api-key
# WHOIS_API_PROVIDER=whoisxml

# DNS resolver servers (comma-separated, optional)
# DNS_SERVERS=8.8.8.8,1.1.1.1

# ===========================
# Development Configuration
# ===========================

# Enable development mode features (true/false)
DEVELOPMENT_MODE=false

# Enable debug logging (true/false)
DEBUG_MODE=false

# Allow CORS from all origins in development (true/false)
CORS_ALLOW_ALL=false

# Frontend URL for CORS (in production)
FRONTEND_URL=http://localhost:4322

# ===========================
# Container Configuration (Docker)
# ===========================

# Container timezone (default: UTC)
TZ=UTC

# User ID for container (default: 1000)
PUID=1000

# Group ID for container (default: 1000)
PGID=1000

# ===========================
# Advanced Configuration
# ===========================

# Enable clustering for multiple CPU cores (true/false)
CLUSTER_MODE=false

# Number of worker processes (0 = auto-detect CPU cores)
WORKER_COUNT=0

# Memory limit for the application in MB (0 = unlimited)
MEMORY_LIMIT=0

# Enable performance monitoring (true/false)
PERFORMANCE_MONITORING=false 